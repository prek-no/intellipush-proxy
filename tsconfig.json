{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "public",
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "@types/node"
    ]
  },
  "include": ["api/**/*"]
}
